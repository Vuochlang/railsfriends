<div class="jumbotron">
  <h1 class="display-4">
    <%= @friend.first_name %>
    <%= @friend.last_name %>
  </h1>
  <p class="lead">
    <%= @friend.email %>   &nbsp;|&nbsp;
    <%= @friend.phone %>   &nbsp;|&nbsp;  
    <%= @friend.twitter %> &nbsp;|&nbsp; 
    <%= @friend.created_at %>
    <br><br>
  </p>
  <hr class="my-4">
  <%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-secondary" %>
  <%= link_to 'Remove', @friend, method: :delete, data: { confirm: 'Are you sure?'}, class:"btn btn-danger" %>
  <%= link_to 'Back', friends_path, class:"btn btn-secondary" %>
</div>